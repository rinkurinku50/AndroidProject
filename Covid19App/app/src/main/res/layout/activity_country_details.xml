<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back"
    tools:context=".CountryDetailsActivity">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="190dp"
                    android:elevation="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="true"
                    >
                <ImageView
                    android:id="@+id/countyD_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="190dp"
                    android:elevation="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="true"
                    >
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/countrypiechart"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_height="match_parent" />

                </androidx.cardview.widget.CardView>





            </LinearLayout>


   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       >

     <LinearLayout
         android:layout_width="match_parent"
         android:orientation="vertical"
         android:layout_height="match_parent"
         android:paddingHorizontal="15dp"
         android:layout_marginTop="5dp"
         >



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:elevation="5dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"

     >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/totalCase"
            android:layout_height="match_parent">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cases"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/pt_serif_bold_italic"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
               android:layout_marginTop="2dp"
                android:background="@color/white_color"
                />

            <TextView
                android:id="@+id/county_cases"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="200120210"
                android:fontFamily="@font/open_sans_extrabold"
                android:gravity="center"
                android:letterSpacing="0.2"
                android:textSize="20sp"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>








  <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:elevation="5dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
           >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/deathCase"
            android:layout_height="match_parent">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deaths"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/pt_serif_bold_italic"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:background="@color/white_color"
                />

            <TextView
                android:id="@+id/county_deaths"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="200120210"
                android:gravity="center"
                android:fontFamily="@font/open_sans_extrabold"
                android:textSize="20sp"
                android:letterSpacing="0.2"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


         <androidx.cardview.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="80dp"
             android:elevation="5dp"
             app:cardCornerRadius="10dp"
             app:cardUseCompatPadding="true"

             >
             <LinearLayout
                 android:layout_width="match_parent"
                 android:orientation="vertical"
                 android:layout_height="match_parent">

                 <TextView

                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Critical"
                     android:gravity="center"
                     android:textSize="20sp"
                     android:textColor="@android:color/black"
                     android:fontFamily="@font/pt_serif_bold_italic"
                     />

                 <View
                     android:layout_width="match_parent"
                     android:layout_height="1dp"
                     android:layout_marginTop="2dp"
                     android:background="@color/white_color"
                     />

                 <TextView
                     android:id="@+id/county_critical"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="200120210"
                     android:gravity="center"
                     android:textSize="20sp"
                     android:letterSpacing="0.2"
                     android:fontFamily="@font/open_sans_extrabold"
                     />


             </LinearLayout>

         </androidx.cardview.widget.CardView>






    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:elevation="5dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/activeCase"
            android:layout_height="match_parent">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Active"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/pt_serif_bold_italic"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:background="@color/white_color"
                />

            <TextView
                android:id="@+id/county_active"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="200120210"
                android:gravity="center"
                android:textSize="20sp"
                android:letterSpacing="0.2"
                android:fontFamily="@font/open_sans_extrabold"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>





         <androidx.cardview.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="80dp"
             android:elevation="5dp"
             app:cardCornerRadius="10dp"
             app:cardUseCompatPadding="true"

             >
             <LinearLayout
                 android:layout_width="match_parent"
                 android:orientation="vertical"
                 android:layout_height="match_parent">

                 <TextView

                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Today Cases"
                     android:gravity="center"
                     android:textSize="20sp"
                     android:textColor="@android:color/black"
                     android:fontFamily="@font/pt_serif_bold_italic"
                     />

                 <View
                     android:layout_width="match_parent"
                     android:layout_height="1dp"
                     android:layout_marginTop="2dp"
                     android:background="@color/white_color"
                     />

                 <TextView
                     android:id="@+id/county_todaycases"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="200120210"
                     android:gravity="center"
                     android:textSize="20sp"
                     android:letterSpacing="0.2"
                     android:fontFamily="@font/open_sans_extrabold"
                     />

             </LinearLayout>

         </androidx.cardview.widget.CardView>


         <androidx.cardview.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="80dp"
             android:elevation="5dp"
             app:cardCornerRadius="10dp"
             app:cardUseCompatPadding="true"

             >
             <LinearLayout
                 android:layout_width="match_parent"
                 android:orientation="vertical"
                 android:background="@color/recoverdCase"
                 android:layout_height="match_parent">

                 <TextView

                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Recovered"
                     android:gravity="center"
                     android:textSize="20sp"
                     android:textColor="@android:color/black"
                     android:fontFamily="@font/pt_serif_bold_italic"
                     />

                 <View
                     android:layout_width="match_parent"
                     android:layout_height="1dp"
                     android:layout_marginTop="2dp"
                     android:background="@color/white_color"
                     />

                 <TextView
                     android:id="@+id/county_recovered"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="200120210"
                     android:gravity="center"
                     android:textSize="20sp"
                     android:letterSpacing="0.2"
                     android:fontFamily="@font/open_sans_extrabold"
                     />

             </LinearLayout>

         </androidx.cardview.widget.CardView>

         <androidx.cardview.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="80dp"
             android:elevation="5dp"
             app:cardCornerRadius="10dp"
             app:cardUseCompatPadding="true"

             >
             <LinearLayout
                 android:layout_width="match_parent"
                 android:orientation="vertical"
                 android:layout_height="match_parent">

                 <TextView

                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Today Deaths"
                     android:gravity="center"
                     android:textSize="20sp"
                     android:textColor="@android:color/black"
                     android:fontFamily="@font/pt_serif_bold_italic"
                     />

                 <View
                     android:layout_width="match_parent"
                     android:layout_height="1dp"
                     android:layout_marginTop="2dp"
                     android:background="@color/white_color"
                     />

                 <TextView
                     android:id="@+id/county_todaydeaths"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="200120210"
                     android:gravity="center"
                     android:textSize="20sp"
                     android:letterSpacing="0.2"
                     android:fontFamily="@font/open_sans_extrabold"
                     />

             </LinearLayout>

         </androidx.cardview.widget.CardView>



     </LinearLayout>
   </androidx.core.widget.NestedScrollView>


</LinearLayout>